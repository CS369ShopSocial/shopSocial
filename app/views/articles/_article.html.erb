<li>
 <%= image_tag article.image.url(:thumb) %>
 <%= link_to article.name, article %>
 <% if current_user.admin? %>
   | <%= link_to "Delete", article, method: :delete,
                                 data: { confirm: "You sure?" } %>
     <%= link_to 'Edit', edit_article_path(article) %>
 <% end %>
</li>
